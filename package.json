{
  "name": "epdoc-validate",
  "version": "1.0.2-beta.15",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "clean": "rm -rf *.d.ts dist coverage",
    "build": "npm run ts:js",
    "test": "jest --runInBand --verbose",
    "coverage": "jest --coverage --runInBand --verbose",
    "prepare": "npm run build",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p tsconfig.json",
    "ts:js": "tsc",
    "ts:defs": "tsc --declaration --outDir . --emitDeclarationOnly",
    "prepublishOnly": "npm run ts:js",
    "postpublish": "npm run clean"
  },
  "jest": {
    "verbose": true
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^13.1.4",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "epdoc-util": "github:jpravetz/epdoc-util"
  }
}
